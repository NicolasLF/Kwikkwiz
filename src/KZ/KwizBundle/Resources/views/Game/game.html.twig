{% extends 'base.html.twig' %}

{% block body %}
    {% if isTurn==0 %}
        <h1>Attente de votre tour</h1>
    {% elseif isTurn==1 %}
        <h1>Jeu</h1>
    {% elseif isTurn==-1 %}
        <h1>Fin de partie</h1>
    {% else %}
        <h1>Attente de début</h1>
    {% endif %}

    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons iconeNoire">account_circle</i></a>
                <ul class="right hide-on-med-and-down">
                    <li><img src="{{ asset('img/avatar3.png') }}"></li>
                    <li><h3>Pseudo</h3></li>
                    <li><a href="#"><i class="material-icons">history</i>Historique</a></li>
                    <li><a href="/new_game"><i class="material-icons">add_circle</i>Créer une partie</a></li>
                    <li><a href="/joinParty"><i class="material-icons">input</i>Rejoindre une partie</a></li>
                    <li><a href="/"><i class="material-icons">power_settings_new</i>Déconnexion</a></li>
                </ul>
                <ul class="side-nav" id="mobile-demo">
                    <li><img class="avatarNav" src="{{ asset('img/avatar3.png') }}"></li>
                    <li><h3>Pseudo</h3></li>

                    <hr class="hrNav"/>
                    <li><a href="#"><i class="material-icons">history</i>Historique</a></li>
                    <li><a href="/newGame"><i class="material-icons">add_circle</i>Créer une partie</a></li>
                    <li><a href="/joinParty"><i class="material-icons">input</i>Rejoindre une partie</a></li>
                    <li><a href="/"><i class="material-icons">power_settings_new</i>Déconnexion</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="row">
        <div class="col s10 offset-s1 marginBottom">
            <div class=" z-depth-4 carteFond">

                <div class="card-title center-align" style="background-color: {{ question.category.color is defined }}">
                    <h5>{% if question.category.name is not defined %}CARTE SPECIAL{% else %}{{ question.category.name }}{% endif %}</h5>
                </div>

                <div class="center-align card-content">
                    <h3>{% if question.content is not defined %}{{ card is defined }}{% else %}{{ question.content }}{% endif %}</h3>
                    <img class="questionImg" src="{{ asset('img/avatar4.png') }}">
                </div>

                <div class="reponses">
                    {% for answer in answers is defined %}
                    <div class="center-align btnReponse">
                        <a style="background-color: {{ question.category.color is defined }}" class="btn waves-effect btn teal accent-2 white-text darken-text-2" href="{{ path('kz_kwiz_verif', {'id': answer.id,'party': party.id}) }}">{{ answer.answer }}</a>
                    </div>
                    {% endfor %}
                    {% if card.question is not defined and party.id is defined %}
                        <a href="{{ path('kz_kwiz_game', {'id': party.id}) }}">OK</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    {% block javascripts %}
        <script>
            $(document).ready(function () {
                $('.button-collapse').sideNav({
                    menuWidth: 300, // Default is 300
                    edge: 'left', // Choose the horizontal origin
                    closeOnClick: true, // Closes side-nav on <a> clicks, useful for Angular/Meteor
                    draggable: true // Choose whether you can drag to open on touch screens
                });
            });
        </script>

    {% endblock %}



{% endblock %}
