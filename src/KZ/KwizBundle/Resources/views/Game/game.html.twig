{% extends 'base.html.twig' %}

{% block body %}
    {% if isTurn==0 %}
        <h1>Attente de votre tour</h1>
    {% elseif isTurn==1 %}
        <h1>Jeu</h1>
    {% elseif isTurn==-1 %}
        <h1>Fin de partie</h1>
    {% else %}
        <h1>Attente de début</h1>
    {% endif %}

    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">account_circle</i></a>
                <ul class="right hide-on-med-and-down">
                    <li><img src="{{ asset('img/avatar3.png') }}"></li>
                    <li><h3>Pseudo</h3></li>
                    <li><a href="#"><i class="material-icons">history</i>Historique</a></li>
                    <li><a href="/new_game"><i class="material-icons">add_circle</i>Créer une partie</a></li>
                    <li><a href="/joinParty"><i class="material-icons">input</i>Rejoindre une partie</a></li>
                    <li><a href="/"><i class="material-icons">power_settings_new</i>Déconnexion</a></li>
                </ul>
                <ul class="side-nav" id="mobile-demo">
                    <li><img class="avatarNav" src="{{ asset('img/avatar3.png') }}"></li>
                    <li><h3>Pseudo</h3></li>

                    <hr class="hrNav"/>
                    <li><a href="#"><i class="material-icons">history</i>Historique</a></li>
                    <li><a href="/newGame"><i class="material-icons">add_circle</i>Créer une partie</a></li>
                    <li><a href="/joinParty"><i class="material-icons">input</i>Rejoindre une partie</a></li>
                    <li><a href="/"><i class="material-icons">power_settings_new</i>Déconnexion</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-image">
                        <span class="card-title center-align">{{ cat.name }}</span>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <div class="col s8 offset-s2 center-align">
                                <h3>Question</h3>
                                <p>{{ question.content }}</p>
                            </div>
                        </div>
                        {% for answer in answers %}
                            <div class="row">
                                <div class="col s6 offset-s3 center-align">
                                    <a class="btn waves-effect btn teal accent-2 white-text darken-text-2"
                                       href="{{ path('kz_kwiz_verif',{'id': {{ answer.id }} }) }}">{{ answer.answer }}</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>
    </div>
    {% block javascripts %}
        <script>
            $(document).ready(function () {
                $('.button-collapse').sideNav({
                    menuWidth: 300, // Default is 300
                    edge: 'left', // Choose the horizontal origin
                    closeOnClick: true, // Closes side-nav on <a> clicks, useful for Angular/Meteor
                    draggable: true // Choose whether you can drag to open on touch screens
                });
            });
        </script>

    {% endblock %}



{% endblock %}
