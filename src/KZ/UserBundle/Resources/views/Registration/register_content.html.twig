{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <!--Login Register-->
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register', 'id': 'registration_form'}}) }}
    <div class="formStyle">
        <div class="form-group id=" fos_user_registration_form
        ">
        <div class="row">
            <div class="form-group col s6 offset-s3">
                <label for="username" class="sr-only">Pseudo</label>
                {{ form_widget(form.username, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'Pseudo' } }) }}
                {{ form_errors(form.username) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col s6 offset-s3">
                <label for="email" class="sr-only">Email</label>
                {{ form_widget(form.email, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'form.email'|trans } }) }}
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col s6 offset-s3">
                <label for="password" class="sr-only">Mot de passe</label>
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'Mot de passe' } }) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col s6 offset-s3">
                <label for="password" class="sr-only">Confirmer le mot de passe</label>
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'Confimer le mot de passe'|trans } }) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col s6 offset-s3">
                <label for="username" class="sr-only">Avatar</label>
                {{ form_widget(form.Avatar, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'Avatar' } }) }}
                {{ form_errors(form.Avatar) }}
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col s6 offset-s3">
        <p><a href="#">Déjà dans la Kwikysphère ?</a></p>
        <button type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}">S'enregistrer</button>
        </div>
    </div>
    </div>
    {{ form_end(form) }}
    <!--Register Form Ends-->
{% endblock body %}

