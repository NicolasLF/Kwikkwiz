{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register', 'id': 'registration_form'}}) }}
<div class="form-group" id="fos_user_registration_form">
    <div class="row">
        <div class="form-group col-xs-12">
            <label for="username" class="sr-only">Username</label>
            {{ form_widget(form.username, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'Username'|trans } }) }}
            {{ form_errors(form.username) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12">
            <label for="email" class="sr-only">Email</label>
            {{ form_widget(form.email, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'form.email'|trans } }) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12">
            <label for="password" class="sr-only">Password</label>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'form.password'|trans } }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12">
            <label for="password" class="sr-only">Password</label>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'form.password_confirmation'|trans } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>
    {#<div class="row">#}
        {#<div class="form-group col-xs-12">#}
            {#<label for="username" class="sr-only">Avatar</label>#}
            {#{{ form_widget(form.Avatar, { 'attr': {'class': 'form-control input-group-lg', 'placeholder': 'Avatar'|trans } }) }}#}
            {#{{ form_errors(form.Avatar) }}#}
        {#</div>#}
    {#</div>#}

</div>
<div>
    <p><a href="#">Already have an account?</a></p>
    <button type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}">Register Now</button>
</div>
{{ form_end(form) }}

