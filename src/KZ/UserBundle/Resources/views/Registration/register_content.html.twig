{% extends '::base.html.twig' %}

{% block title %}KwikKwiz | Nouveau profil{% endblock %}

{% block body %}
    <header>
        <nav>
            <div class="nav-wrapper ">
                <div class="row">
                    <div class="col s1 m1 l1">
                        <a href="#" data-activates="mobile-demo" class="button-collapse ">
                            <i class="material-icons iconeNoire paddingTop2">account_circle</i>
                        </a>
                    </div>


                    <div class=" col s4 m4 l2 offset-s3 offset-m3 offset-l4">
                        <a href="/"> <img class="formBrandLogo paddingTop"
                                          src="{{ asset('img/kwikkwizLogoLineWhite.png') }}">
                        </a>
                    </div>

                </div>


                <ul class="side-nav" id="mobile-demo">
                    <li><img class="avatarNav" src="{{ asset('img/avatar3.png') }}"></li>
                    <li><h3>Pseudo</h3></li>
                    <hr class="hrNav"/>
                    <li><a href="#"><i class="material-icons">history</i>Historique</a></li>
                    <li><a href="/newGame"><i class="material-icons">add_circle</i>Créer une partie</a></li>
                    <li><a href="/joinParty"><i class="material-icons">input</i>Rejoindre une partie</a></li>
                    <li><a href="/"><i class="material-icons">power_settings_new</i>Déconnexion</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid joinParty">

    <div class="row">
    <div class="col s12">
        <h1>NOUVEAU PROFIL</h1>
    </div>

    <!--Register Form-->
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register', 'id': 'registration_form'}}) }}
    <div class="form-group" id="fos_user_registration_form">
    <div class="row">
        <div class="col s6 offset-s3 ">
            <label for="username" class="sr-only formLabel">Pseudo</label>
            {{ form_widget(form.username, { 'attr': {'class': 'form-control input-group', 'placeholder': 'Pseudo'|trans } }) }}
            {{ form_errors(form.username) }}
        </div>
    </div>
    <div class="row">
        <div class="col s6 offset-s3 ">
            <label for="email" class="sr-only formLabel">Email</label>
            {{ form_widget(form.email, { 'attr': {'class': 'form-control input-group', 'placeholder': 'Email'|trans } }) }}
            {{ form_errors(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col s6 offset-s3 ">
            <label for="password" class="sr-only formLabel">Mot de passe</label>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-group', 'placeholder': 'Mot de passe'|trans } }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>
    <div class="row">
        <div class="col s6 offset-s3 ">
            <label for="password" class="sr-only formLabel">Mot de passe</label>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control input-group', 'placeholder': 'Confirmer le mot de passe'|trans } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>
    <div class="row">
        <div class="col s6 offset-s3">
            <label for="username" class="sr-only formLabel">Choisir un avatar</label>
            {{ form_widget(form.Avatar) }}
            {{ form_errors(form.Avatar) }}
        </div>
    </div>

    <div class="row">
        <div class="col s2 offset-s1">
            <img class="avatarRadio" src="{{ asset('/img/avatar1.png') }}"/>
        </div>
        <div class="col s2">
            <img class="avatarRadio" src="{{ asset('/img/avatar2.png') }}"/>
        </div>
        <div class="col s2">
            <img class="avatarRadio" src="{{ asset('/img/avatar3.png') }}"/>
        </div>
        <div class="col s2">
            <img class="avatarRadio" src="{{ asset('/img/avatar4.png') }}"/>
        </div>
    </div>

    <div class="row">
        <div class="form-group col s6 offset-s3">
            <button type="submit" class="btn btn-btn teal accent-2" value="{{ 'registration.submit'|trans }}">
                Enregistrer
            </button>
            <p><a href="/login">Déjà membre ?</a></p>
        </div>
    </div>

    {{ form_end(form) }}
    <!--Register Form Ends-->
    {% block javascripts %}
        <script>
            $(document).ready(function () {
                $('.button-collapse').sideNav({
                    menuWidth: 300, // Default is 300
                    edge: 'left', // Choose the horizontal origin
                    closeOnClick: true, // Closes side-nav on <a> clicks, useful for Angular/Meteor
                    draggable: true // Choose whether you can drag to open on touch screens
                });
            });
        </script>

    {% endblock %}
{% endblock body %}