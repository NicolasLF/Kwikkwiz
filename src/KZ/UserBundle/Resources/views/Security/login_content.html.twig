{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <!--Login Form-->
    {% if error is defined %}
        {% if error is not empty %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    {% endif %}
    <form name="Login_form" id="Login_form" action="{{ path("fos_user_security_check") }}" method="post" class="formStyle">
        {% if csrf_token is defined %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}
        <div class="row">
            <div class="form-group col s6 offset-s3">
                <label for="username" class="sr-only">{{ 'Pseudo' }}</label>
                <input type="text" class="form-control input-group-lg"
                       placeholder="{{ 'security.login.username'|trans }}"
                       id="username" name="_username"  required="required"/>
            </div>
        </div>
        <div class="row">
            <div class="form-group col s6 offset-s3">
                <label for="password" class="sr-only">{{ 'Mot de passe' }}</label>
                <input type="password" class="form-control input-group-lg"
                       placeholder="{{ 'Mot de passe' }}" id="password" name="_password"
                       required="required"/>
            </div>
        </div>
        <div class="row">
            <div class="form-group form-group col s6 offset-s3">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'Se souvenir de moi' }}</label>
            </div>
        </div>

        <div class="row">
            <button type="submit" class="btn btn-primary col s6 offset-s3" id="_submit" name="_submit"
                    value="{{ 'security.login.submit'|trans }}">{{ 'Se connecter' }}</button>
        </div>
    </form>
    <!--Login Form Ends-->
{% endblock body %}