{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parties list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Mode</th>
                <th>Nbplayer</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for party in parties %}
            <tr>
                <td><a href="{{ path('party_show', { 'id': party.id }) }}">{{ party.id }}</a></td>
                <td>{{ party.name }}</td>
                <td>{{ party.mode }}</td>
                <td>{{ party.nbPlayer }}</td>
                <td>{{ party.active }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('party_show', { 'id': party.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('party_edit', { 'id': party.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('party_new') }}">Create a new party</a>
        </li>
    </ul>
{% endblock %}
